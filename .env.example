# BitfinexLendingBot 生產環境配置
# 複製此文件為 .env 並填入實際值

# 數據庫配置
DB_PASSWORD=your_secure_database_password_here

# Bitfinex API 配置
BITFINEX_API_KEY=your_bitfinex_api_key_here
BITFINEX_API_SECRET=your_bitfinex_api_secret_here

# Telegram 通知配置
TELEGRAM_BOT_TOKEN=your_telegram_bot_token_here
TELEGRAM_CHAT_ID=your_telegram_chat_id_here

# 安全配置 (可選)
# JWT_SECRET=your_jwt_secret_for_api_access
# ENCRYPTION_KEY=your_encryption_key_for_sensitive_data

# 監控告警配置
ALERT_THRESHOLDS_CPU=80
ALERT_THRESHOLDS_MEMORY=80
ALERT_THRESHOLDS_DISK=90
MONITOR_INTERVAL=60

# 第三方監控服務 (可選)
# SENTRY_DSN=your_sentry_dsn_for_error_tracking
# DATADOG_API_KEY=your_datadog_key_for_metrics